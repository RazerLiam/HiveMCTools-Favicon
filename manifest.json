{
  "manifest_version": 2,

  "name": "HiveMCTools Favicon",
  "short_name" : "HMCT Fav",
  "description": "Adds a favicon to all hive web pages'.",
  "version": "1.0",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "content_scripts": [{
    "matches": ["*://*.hivemc.com/*"],
    "js": ["AddFavicon.js"]
  }],
  "permissions": [
      "tabs"
  ]
}